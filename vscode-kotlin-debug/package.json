{
  "name": "kotlin-debug",
  "displayName": "Kotlin Debug",
  "description": "Kotlin debugger for VSCode using kotlin-debugger DAP",
  "version": "0.2.0",
  "publisher": "kotlindebugger",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/schizobulia/kt-debugger"
  },
  "bugs": {
    "url": "https://github.com/schizobulia/kt-debugger/issues"
  },
  "homepage": "https://github.com/schizobulia/kt-debugger#readme",
  "icon": "images/kotlin-debug-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "kotlin",
    "debug",
    "debugger",
    "jvm",
    "dap"
  ],
  "activationEvents": [
    "onDebug",
    "onDebugResolve:kotlin",
    "onDebugDynamicConfigurations:kotlin",
    "onLanguage:kotlin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kotlin-debug.generateLaunchConfig",
        "title": "Kotlin Debug: Generate Launch Configuration",
        "category": "Kotlin Debug"
      },
      {
        "command": "kotlin-debug.debugMain",
        "title": "Kotlin Debug: Debug Main Function",
        "category": "Kotlin Debug"
      },
      {
        "command": "kotlin-debug.showDebugMenu",
        "title": "Kotlin Debug: Show Debug Menu",
        "category": "Kotlin Debug"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "kotlin-debug.generateLaunchConfig",
          "when": "resourceLangId == kotlin",
          "group": "debug"
        }
      ],
      "commandPalette": [
        {
          "command": "kotlin-debug.generateLaunchConfig"
        },
        {
          "command": "kotlin-debug.showDebugMenu"
        },
        {
          "command": "kotlin-debug.debugMain",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Kotlin Debug",
      "properties": {
        "kotlin-debug.debuggerJarPath": {
          "type": "string",
          "default": "",
          "description": "Path to the kotlin-debugger JAR file. If not set, the extension will search in common locations."
        },
        "kotlin-debug.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable Code Lens for Kotlin main functions to show Run/Debug actions."
        },
        "kotlin-debug.enableHoverEvaluation": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover evaluation of variables during debugging."
        },
        "kotlin-debug.defaultSourcePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "${workspaceFolder}/src/main/kotlin",
            "${workspaceFolder}/src/main/java"
          ],
          "description": "Default source paths to use for resolving Kotlin files during debugging."
        }
      }
    },
    "breakpoints": [
      {
        "language": "kotlin"
      }
    ],
    "debuggers": [
      {
        "type": "kotlin",
        "label": "Kotlin Debug",
        "languages": [
          "kotlin"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "command",
              "port"
            ],
            "properties": {
              "command": {
                "type": "string",
                "description": "Command to start the application. Must include JDWP debug options with the specified port."
              },
              "port": {
                "type": "number",
                "description": "Debug port that the application will listen on"
              },
              "host": {
                "type": "string",
                "description": "Host to connect to (for remote debugging)",
                "default": "localhost"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory for the command",
                "default": "${workspaceFolder}"
              },
              "env": {
                "type": "object",
                "description": "Environment variables for the command",
                "default": {}
              },
              "sourcePaths": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Source paths for Kotlin files",
                "default": [
                  "${workspaceFolder}/src/main/kotlin"
                ]
              },
              "preLaunchWait": {
                "type": "number",
                "description": "Time in milliseconds to wait after starting the command before attaching (default: 2000)",
                "default": 2000
              }
            }
          },
          "attach": {
            "required": [
              "port"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host to connect to",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Debug port to connect to"
              },
              "sourcePaths": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Source paths for Kotlin files",
                "default": [
                  "${workspaceFolder}/src/main/kotlin"
                ]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin: Launch and Debug",
            "command": "java -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005 -jar ${workspaceFolder}/build/libs/your-app.jar",
            "port": 5005,
            "cwd": "${workspaceFolder}",
            "sourcePaths": [
              "${workspaceFolder}/src/main/kotlin"
            ]
          },
          {
            "type": "kotlin",
            "request": "attach",
            "name": "Kotlin: Attach to JVM",
            "host": "localhost",
            "port": 5005,
            "sourcePaths": [
              "${workspaceFolder}/src/main/kotlin"
            ]
          }
        ],
        "configurationSnippets": [
          {
            "label": "Kotlin: Launch",
            "description": "Launch an application with debug enabled and attach",
            "body": {
              "type": "kotlin",
              "request": "launch",
              "name": "Kotlin: Launch and Debug",
              "command": "java -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005 -jar ^\"\\${workspaceFolder}/build/libs/your-app.jar\"",
              "port": 5005,
              "cwd": "^\"\\${workspaceFolder}\"",
              "sourcePaths": [
                "^\"\\${workspaceFolder}/src/main/kotlin\""
              ]
            }
          },
          {
            "label": "Kotlin: Launch (Gradle)",
            "description": "Launch a Gradle project with debug enabled",
            "body": {
              "type": "kotlin",
              "request": "launch",
              "name": "Kotlin: Launch Gradle",
              "command": "./gradlew run -Dorg.gradle.jvmargs=\"-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005\"",
              "port": 5005,
              "cwd": "^\"\\${workspaceFolder}\"",
              "sourcePaths": [
                "^\"\\${workspaceFolder}/src/main/kotlin\""
              ]
            }
          },
          {
            "label": "Kotlin: Attach",
            "description": "Attach to a running JVM with debug enabled",
            "body": {
              "type": "kotlin",
              "request": "attach",
              "name": "Kotlin: Attach to JVM",
              "host": "localhost",
              "port": 5005,
              "sourcePaths": [
                "^\"\\${workspaceFolder}/src/main/kotlin\""
              ]
            }
          }
        ],
        "exceptionBreakpointFilters": [
          {
            "filter": "caught",
            "label": "Caught Exceptions",
            "default": false,
            "description": "Break on caught exceptions"
          },
          {
            "filter": "uncaught",
            "label": "Uncaught Exceptions",
            "default": true,
            "description": "Break on uncaught exceptions"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --out ./dist/",
    "lint": "tsc --noEmit",
    "clean": "rm -rf out dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0"
  }
}
