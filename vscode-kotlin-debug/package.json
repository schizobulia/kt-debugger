{
  "name": "kotlin-debug",
  "displayName": "Kotlin Debug",
  "description": "Kotlin debugger for VSCode using kotlin-debugger DAP",
  "version": "0.1.0",
  "publisher": "kotlindebugger",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug",
    "onDebugResolve:kotlin",
    "onDebugDynamicConfigurations:kotlin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kotlin Debug",
      "properties": {
        "kotlin-debug.debuggerJarPath": {
          "type": "string",
          "default": "",
          "description": "Path to the kotlin-debugger JAR file. If not set, the extension will search in common locations."
        }
      }
    },
    "breakpoints": [
      {
        "language": "kotlin"
      }
    ],
    "debuggers": [
      {
        "type": "kotlin",
        "label": "Kotlin Debug",
        "languages": [
          "kotlin"
        ],
        "configurationAttributes": {
          "attach": {
            "required": [
              "port"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host to connect to",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Debug port to connect to"
              },
              "sourcePaths": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Source paths for Kotlin files",
                "default": [
                  "${workspaceFolder}/src/main/kotlin"
                ]
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "kotlin",
            "request": "attach",
            "name": "Kotlin: Attach to JVM",
            "host": "localhost",
            "port": 5005,
            "sourcePaths": [
              "${workspaceFolder}/src/main/kotlin"
            ]
          }
        ],
        "configurationSnippets": [
          {
            "label": "Kotlin: Attach",
            "description": "Attach to a running JVM with debug enabled",
            "body": {
              "type": "kotlin",
              "request": "attach",
              "name": "Kotlin: Attach to JVM",
              "host": "localhost",
              "port": 5005,
              "sourcePaths": [
                "^\"\\${workspaceFolder}/src/main/kotlin\""
              ]
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0"
  }
}
